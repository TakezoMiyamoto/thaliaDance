<div class="container">
  <div class="container-inner inner-default clearfix">
    <% works.order("created_at desc").each do |work| %>
      <div class="item-box">
        <div class="image">
          <div class="img-wrap">
            <% if work.youtube_url == nil  %>
              <%= link_to image_tag("/images/no-image.png"), work %>
            <% else %>
              <%= link_to imaged(work.youtube_url), work %>
            <% end %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <%= work.title %>
            <!-- period date -->
        </div>
      </div>
    <% end %>
  </div>
</div>
