<% content_for :head do %>
  <meta name="title" content="<%=@work.title %>">
  <meta name="description" content="「<%= @work.title %>」に関する情報です">
<% end %>

<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3">
      <div class="workbox">
        <h2><%= @work.title %></h2>

        <div class= "youtube-container">
          <%= link_to @work.video_url.to_s do %>
            <%= image_tag(@work.video_url(:screenshot).to_s, id: "video", :alt => "screenshot") %>
          <% end %>

        </div>
        <p><%= @work.description %></p>
        <div>
          <% if current_user == @work.user && current_user != nil %>
              <%= link_to "Work edit", edit_work_path(@work), class: "btn btn-large btn-default edit-btn" %>
          <% end %>
        </div>
      </div>
        <p class="work-p"><%= @work.description %></p>
    </div>
  </div>
 </div>
</div>
