<% content_for :head do %>
  <meta name="title" content="<%=@work.title %>">
  <meta name="description" content="「<%= @work.title %>」に関する情報です">
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="wrapper">
        <h2><%= @work.title %></h2>
        <div class= "youtube-container">
        <%= embed(@work.youtube_url) %>
        </div>
        <p><%= @work.description %></p>
      </div>


    </div>
  </div>
</div>
