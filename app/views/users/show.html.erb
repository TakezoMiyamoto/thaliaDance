<% content_for :head do %>
  <meta name="title" content="<%=@user.name %>">
  <meta name="description" content="<%=@user.name %>のマイページ">
<% end %>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 user-profile">
            <h4><%= @user.name %></h4>
            <!-- image -->

            <% if @user.avatar == nil  %>
                <p><%= link_to image_tag("/images/icon.png" , alt: "usericon"), user_path(@user) %></p>
            <% else %>
                <p><%= link_to image_tag(@user.avatar , alt: @user.name), user_path(@user) %></p>
            <% end %>


            <% if @user == current_user %>
                <%= link_to "プロフィールの編集", edit_user_path(@user), class: "btn btn-large btn-info edit-btn" %>
            <% end %>

        </div>

    </div>
</div>
